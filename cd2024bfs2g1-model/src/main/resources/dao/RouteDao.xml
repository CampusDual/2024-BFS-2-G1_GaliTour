<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="route"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>route_id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>route_id</Column>
    </UpdateKeys>
    <GeneratedKey>route_id</GeneratedKey>
    <Queries>
        <Query id="allColumns">
            <Sentence>
                <![CDATA[
                    SELECT
                        route_id,
                        name,
                        description,
                        estimated_duration,
                        difficulty
                    FROM
                        ${mainschema}.route
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="multi">
            <Sentence>
                <![CDATA[
                    SELECT
                        R.route_id,
                        R.name,
                        R.description,
                        R.estimated_duration,
                        R.difficulty,
                        I.img_code
                    FROM
                        ${mainschema}.route R
                        INNER JOIN ${mainschema}. image_route IR
                        ON R.route_id=IR.route_id
                        INNER JOIN ${mainschema}. image I
                        ON IR.image_id=I.image_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>