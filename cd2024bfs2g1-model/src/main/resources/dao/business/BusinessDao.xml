<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup xmlns="http://www.ontimize.com/schema/jdbc"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
                 catalog="" schema="${mainschema}" table="bsn_business" datasource="mainDataSource"
                 sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>bsn_id</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>bsn_id</Column>
    </UpdateKeys>
    <GeneratedKey>bsn_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.bsn_business
                    WHERE bsn_down_date is null
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="allBusinesses">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.bsn_business b
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="businessOfPack">
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.bsn_business b
                        INNER JOIN ${mainschema}.bsn_pack bsp
                        ON B.bsn_id=BSP.bsn_id
                    #WHERE_CONCAT#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
